#----------------------------------------------------------------------------------------------
# Source Files
#----------------------------------------------------------------------------------------------
SRC = ft_printf.c

#----------------------------------------------------------------------------------------------
# Object Files
#----------------------------------------------------------------------------------------------
OBJ = $(addprefix $(OBJ_D)/, $(SRC:.c=.o))
SRC_PATH = $(addprefix $(SRC_D), /)
#----------------------------------------------------------------------------------------------
# Archives
#----------------------------------------------------------------------------------------------
NAME = libftprintf.a

LIBFT_ARCHIVE = libft/libft.a

#----------------------------------------------------------------------------------------------
# Variables
#----------------------------------------------------------------------------------------------
CFLAGS = -Wall -Werror -Wextra

HEADER = include/ft_printf.h

OBJ_D = obj

SRC_D = src

COMPILE = compiling

TITLE = FT_PRINTF

AR = ar -rcs

RM = rm -rf

#----------------------------------------------------------------------------------------------
# Terminal Ansi Colors
#----------------------------------------------------------------------------------------------
HBLK = '\e[1;90m'
HRED = '\e[1;91m'
HGRN = '\e[1;92m'
HYEL = '\e[1;93m'
HBLU = '\e[1;94m'
HMAG = '\e[1;95m'
HCYN = '\e[1;96m'
HWHT = '\e[1;97m'
NC   = '\e[0m'

#----------------------------------------------------------------------------------------------
# Creating libftprintf.a
#----------------------------------------------------------------------------------------------

all : $(NAME)

$(TITLE) :
		@ printf $(HMAG)"\n‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°\n"
		@ printf "‚ùö 	    ‚úç‚ù° FT_PRINTF ‚ù°‚úç 		‚ùö\n"$
		@ printf "‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°‚ñ°\n\n"$(NC)

$(NAME) : $(TITLE) $(OBJ_D) $(OBJ) $(LIBFT_ARCHIVE) 
	$(AR) $(NAME) $(OBJ)
	$(CC) $(NAME) $(LIBFT_ARCHIVE)
	@ printf ${HYEL}"\nft_Printf: Compilation steps finished üëª "$(HRED)"Run ./a.out\n\n"${NC} 

$(OBJ_D)/%.o : $(SRC_PATH)%.c $(HEADER)
	@ $(CC) $(CFLAGS) -c $< -o $@
	@ printf $(HWHT)"üßê Compiling ‚ñª "${HRED}"$(notdir $@)\n"${NC}

$(OBJ_D) :
	mkdir obj
	
#----------------------------------------------------------------------------------------------
# Cleaning Object files
#----------------------------------------------------------------------------------------------
clean :
	$(RM) $(OBJ_D)
	@ printf $(HWHT)"	Deleted : "$(HRED)" Object files\n"$(NC)
	
fclean : clean
	$(RM) $(NAME)
	@ printf $(HWHT)"	Deleted : "$(HRED)" libftprintf.a\n"$(NC)

re : fclean all

#----------------------------------------------------------------------------------------------
# Libft rules
#----------------------------------------------------------------------------------------------
$(LIBFT_ARCHIVE) :
	cd ./libft ; make ; make bonus

re_all :
	cd libft ; make re ; make bonus ; cd .. ; make re

#----------------------------------------------------------------------------------------------
# Built-in Targets
#----------------------------------------------------------------------------------------------
.SILENT : fclean clean clean_libft re_all $(OBJ_D) $(NAME) $(LIBFT_ARCHIVE)
.DEFAULT_GOAL := all